<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">
            <ImageView
                android:id="@+id/imageview"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="4dp"
                />
            <TextView
                android:id="@+id/txtNameMenuFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pétit Déjeuner"
                android:textStyle="bold"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="18dp"
                android:layout_toRightOf="@id/imageview"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/txtDetailsMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Autres détails concernant le déjeuner"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/txtNameMenuFood"
                android:layout_toRightOf="@id/imageview"
                android:layout_toEndOf="@id/imageview"
                android:textColor="#c33c15"/>
            <TextView
                android:id="@+id/txtEtoiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="*****(0)"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/txtDetailsMenu"
                android:layout_toRightOf="@id/imageview"
                android:layout_toEndOf="@id/imageview"
                android:textColor="#f05100"/>
            <TextView
                android:id="@+id/txtTradition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="A la tradition africaine"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/txtEtoiles"
                android:layout_toRightOf="@id/imageview"
                android:layout_toEndOf="@id/imageview"
                android:textColor="#f05900"
                android:textStyle="italic"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>

