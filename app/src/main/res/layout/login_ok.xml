<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cd.snh.delicious.ui.ActivityLogin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/close"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/login_screen"
        android:background="@drawable/bg_screen1"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_delicious"
            android:id="@+id/logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merci de vous connecter à Delicious"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/slogan"
            android:layout_margin="25dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_alignParentBottom="true">


            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/corner_button_red"
                android:text="Compte Google"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_g_plus_icon"
                android:drawableLeft="@drawable/ic_g_plus_icon"
                android:drawablePadding="8dp"
                android:id="@+id/g_plus"
                />
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/corner_button_green"
                android:text="Telephone"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_smartphone"
                android:drawableLeft="@drawable/ic_smartphone"
                android:drawablePadding="8dp"
                android:id="@+id/phone"
                />



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utitlisant cette application, vous acceptez les termes et licences privées"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:textSize="12sp"
            />

    </LinearLayout>

</RelativeLayout>
